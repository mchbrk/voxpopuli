{% extends 'VPLayoutBundle:Home:HomePage.html.twig' %}

{% block body %}
    <h1>Poll</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ entity.question }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ entity.startDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ entity.endDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    {% for answer in entity.answers %}

        <h5> {{ answer.content }} </h5>

    {% endfor %}

   <a href="{{ path('vote_create', {"id": entity.id }) }}">Vote</a>
        <ul class="record_actions">
    <li>
        <a href="{{ path('poll') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('poll_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
