{% extends 'VPLayoutBundle:Home:HomePage.html.twig' %}

{% block body %}
    <br><br><br>
    {{ form_start(form) }}
    <h2>{{poll.name}}</h2>
    {{poll.question}}
      <h3>Options:</h3>
      <ul class="preferences">
        {% for preference in form.preferences %}
           {{ preference.vars.value.content }}
            <li>{{ form_row(preference.rank) }}</li>
            <li>{{ form_row(preference.approved) }}</li>
            <li>{{ form_row(preference.negative) }}</li>
        {% endfor %}
    </ul>

        <ul class="record_actions">
    <li>
        <a href="{{ path('vote') }}">
            Back to the list
        </a>
    </li>
</ul>
{{ form_end(form) }}
{% endblock %}
